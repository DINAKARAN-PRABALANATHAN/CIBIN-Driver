<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_1"
    tools:context=".Login">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:textColor="#000000" android:textStyle="bold" android:textSize="30dp" android:text="LOGIN" android:layout_marginTop="150dp" android:id="@+id/login"/>

    <EditText android:background="@drawable/input_field" android:layout_height="45dp" android:layout_width="280dp" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:id="@+id/login_emailid" app:layout_constraintVertical_bias="0.094" app:layout_constraintTop_toBottomOf="@+id/login" app:layout_constraintHorizontal_bias="0.497" app:layout_constraintBottom_toBottomOf="parent" android:textColorHint="#000000" android:inputType="textEmailAddress" android:hint="Email Address" android:ems="10" style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"/>

    <EditText android:background="@drawable/input_field" android:layout_height="45dp" android:layout_width="280dp" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:id="@+id/login_password" app:layout_constraintVertical_bias="0.032" app:layout_constraintTop_toBottomOf="@+id/login_emailid" app:layout_constraintHorizontal_bias="0.497" app:layout_constraintBottom_toBottomOf="parent" android:textColorHint="#000000" android:inputType="textPassword" android:hint="Password" android:ems="10" style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"/>

    <Button android:background="@drawable/button" android:layout_height="54dp" android:layout_width="183dp" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:textColor="#FFFFFF" android:textSize="25dp" android:text="Login" android:id="@+id/login_button" app:layout_constraintVertical_bias="0.07" app:layout_constraintTop_toBottomOf="@+id/login_password" app:layout_constraintHorizontal_bias="0.501" app:layout_constraintBottom_toBottomOf="parent" android:textAllCaps="false" android:padding="5dp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:textStyle="bold" android:textSize="15dp" android:text="You are not a member?" android:id="@+id/textView5" app:layout_constraintVertical_bias="0.06" app:layout_constraintTop_toBottomOf="@+id/login_button" app:layout_constraintHorizontal_bias="0.348" app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintEnd_toEndOf="parent" android:textColor="#028C15" android:textStyle="bold" android:textSize="15dp" android:text="REGISTER" android:id="@+id/login_register" app:layout_constraintVertical_bias="0.06" app:layout_constraintTop_toBottomOf="@+id/login_button" app:layout_constraintHorizontal_bias="0.09" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/textView5"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:textColor="#028C15" android:textStyle="bold" android:textSize="15dp" android:text="FORGOT PASSWORD" android:id="@+id/login_forgot" app:layout_constraintVertical_bias="0.057" app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintHorizontal_bias="0.501" app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>