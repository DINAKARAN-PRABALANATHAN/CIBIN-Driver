<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_1"
    tools:context=".ForgotPasswordActivity">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintVertical_bias="0.156"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#000000"
        android:text="RESET PASSWORD"
        android:id="@+id/forgot_password"/>

    <EditText
        android:background="@drawable/input_field"
        android:layout_height="45dp"
        android:layout_width="280dp"
        app:layout_constraintVertical_bias="0.407"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/forgot_password_email_id"
        android:textColorHint="#000000"
        android:inputType="textEmailAddress"
        android:hint="Email Address"
        android:ems="10"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"/>

    <Button
        android:background="@drawable/button"
        android:layout_height="54dp"
        android:layout_width="183dp"
        app:layout_constraintVertical_bias="0.057"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="25dp"
        android:textColor="#FFFFFF"
        android:text="Reset "
        android:id="@+id/forgot_password_button"
        app:layout_constraintTop_toBottomOf="@+id/forgot_password_email_id"
        android:textAllCaps="false"
        android:padding="5dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintVertical_bias="0.124"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="15dp"
        android:textColor="#8C0202"
        android:text=""
        android:id="@+id/forgot_password_message"
        app:layout_constraintTop_toBottomOf="@+id/forgot_password_button"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintVertical_bias="0.135"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="20dp"
        android:textColor="#028C15"
        android:text="LOGIN"
        android:id="@+id/forgot_password_login"
        app:layout_constraintTop_toBottomOf="@+id/forgot_password_message"/>

</androidx.constraintlayout.widget.ConstraintLayout>