<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_1"
    tools:context=".MyComplaints">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:srcCompat="@drawable/back"
        app:maxImageSize="35dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:clickable="true"
        android:backgroundTint="#63E668"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/my_complaints_back_botton"/>

    <ImageView
        android:layout_height="78dp"
        android:layout_width="94dp"
        app:layout_constraintVertical_bias="0.044"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/imageView"
        android:src="@drawable/complaint"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#000"
        android:text="My Complaint"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_height="550dp"
        android:layout_width="350dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/my_complaint_recyclerview"
        app:layout_constraintTop_toBottomOf="@+id/textView6"/>

</androidx.constraintlayout.widget.ConstraintLayout>