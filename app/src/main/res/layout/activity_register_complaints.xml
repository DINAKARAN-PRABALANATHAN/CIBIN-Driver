<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_1"
    tools:context=".RegisterComplaints">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:srcCompat="@drawable/back"
        app:maxImageSize="35dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:clickable="true"
        android:backgroundTint="#63E668"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/register_complaints_back_botton"/>

    <ImageView
        android:layout_height="78dp"
        android:layout_width="94dp"
        app:layout_constraintVertical_bias="0.044"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/imageView"
        android:src="@drawable/consent"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#000"
        android:text="Register Complaint"/>

    <TextView
        android:background="@drawable/input_field"
        android:layout_height="45dp"
        android:layout_width="280dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        android:id="@+id/register_complaints_email"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        android:text="Email address"
        android:gravity="center_vertical"
        android:ems="10"
        android:layout_marginBottom="240dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"/>

    <EditText
        android:background="@drawable/input_field"
        android:layout_height="45dp"
        android:layout_width="280dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="5dp"
        android:id="@+id/register_complaints_bin_id"
        app:layout_constraintTop_toBottomOf="@+id/register_complaints_email"
        android:ems="10" style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:textColorHint="#000000"
        android:inputType="text"
        android:hint="Bin ID"/>

    <EditText
        android:background="@drawable/input_field"
        android:layout_height="45dp"
        android:layout_width="280dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="5dp"
        android:id="@+id/register_complaints_area"
        app:layout_constraintTop_toBottomOf="@+id/register_complaints_bin_id"
        android:ems="10"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:textColorHint="#000000"
        android:inputType="text"
        android:hint="Area"/>

    <EditText
        android:background="@drawable/input_field"
        android:layout_height="180dp"
        android:layout_width="280dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="5dp"
        android:id="@+id/register_complaints_complaints"
        app:layout_constraintTop_toBottomOf="@+id/register_complaints_area"
        android:ems="10"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:textColorHint="#000000"
        android:inputType="textMultiLine"
        android:hint="Complaint"/>

    <Button
        android:background="@drawable/button"
        android:layout_height="54dp"
        android:layout_width="183dp"
        app:layout_constraintVertical_bias="0.064"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/register_complaints_botton"
        app:layout_constraintTop_toBottomOf="@+id/register_complaints_complaints"
        android:textSize="25dp"
        android:textColor="#FFFFFF"
        android:text="Register"
        android:layout_marginBottom="16dp"
        android:textAllCaps="false"
        android:padding="5dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>