<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/home_drawer_layout"
    android:layout_height="match_parent"
    tools:context=".HomeActivitty">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/home_nav_view"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_gravity="start"
        app:menu="@menu/main_menu"
        app:headerLayout="@layout/header"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="53dp"
            android:layout_width="55dp"
            app:navigationIcon="@drawable/menu"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintTop_toTopOf="@+id/home_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:elevation="6dp"
            android:background="#00008577"/>
        <TextView
            android:id="@+id/home_cibin"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:elevation="6dp"
            android:textStyle="bold"
            android:layout_marginBottom="680dp"
            android:textSize="25sp"
            android:textColor="#FFFFFF"
            android:text="CIBIN ENTERPRISES"
            android:fontFamily="serif-monospace"/>

        <LinearLayout
            android:id="@+id/home_welcome"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/home_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:elevation="6dp"
            android:layout_marginBottom="300dp"
            android:orientation="vertical">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:elevation="6dp"
                android:textStyle="bold"
                android:textSize="30dp"
                android:textColor="#FFFFFF"
                android:text="CIBIN ENTERPRISES"
                android:fontFamily="serif-monospace"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:elevation="6dp"
                android:textStyle="bold"
                android:textSize="51dp"
                android:textColor="#FFFFFF"
                android:text="WELCOME!"
                android:fontFamily="serif-monospace"/>
            <TextView
                android:layout_height="33dp"
                android:layout_width="wrap_content"
                android:elevation="6dp"
                android:textStyle="normal"
                android:textSize="30dp"
                android:textColor="#FFFFFF"
                android:text="You to clean India"
                android:fontFamily="serif-monospace"
                android:alpha="0.7"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_screen_list"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:elevation="6dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="250dp">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/home_request_bin"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="80dp">
                    <ImageView
                        android:layout_height="87dp"
                        android:layout_width="118dp"
                        android:layout_marginBottom="4dp"
                        android:src="@drawable/trash"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="#000"
                        android:text="Request BINs"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/home_work_todo"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_height="87dp"
                        android:layout_width="118dp"
                        android:layout_marginBottom="4dp"
                        android:src="@drawable/waste"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="#000"
                        android:text="Works Todo"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/home_register_complaints"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="80dp">
                    <ImageView
                        android:layout_height="87dp"
                        android:layout_width="118dp"
                        android:layout_marginBottom="4dp"
                        android:src="@drawable/consent"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="#000"
                        android:text="Register\nComplaints"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/home_my_complaints"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_height="87dp"
                        android:layout_width="118dp"
                        android:layout_marginBottom="4dp"
                        android:src="@drawable/complaint"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="#000"
                        android:text="My\nComplaints"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/home_register_request_list"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="80dp">
                    <ImageView
                        android:layout_height="87dp"
                        android:layout_width="118dp"
                        android:layout_marginBottom="4dp"
                        android:src="@drawable/trash"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="#000"
                        android:text="Request\nList"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/home_my_profile"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_height="87dp"
                        android:layout_width="118dp"
                        android:layout_marginBottom="4dp"
                        android:src="@drawable/account"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="#000"
                        android:text="My\nProfile"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/home_background"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/welcome"
            android:scaleType="fitXY"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.drawerlayout.widget.DrawerLayout>